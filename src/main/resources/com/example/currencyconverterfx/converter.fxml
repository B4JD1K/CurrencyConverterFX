<AnchorPane prefHeight="760" prefWidth="540" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.currencyconverterfx.ConverterController">
   <children>
      <Label alignment="CENTER" layoutX="30.0" layoutY="14.0" prefHeight="70.0" prefWidth="480.0" text="Currency Converter">
         <font>
            <Font name="System Italic" size="48.0" />
         </font>
      </Label>
      <ImageView fitHeight="147.0" fitWidth="417.0" layoutX="62.0" layoutY="84.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../../../currencies.jpg" />
      </ImageView>
      <TextField fx:id="enterAmount" alignment="CENTER" layoutX="56.0" layoutY="230.0" prefHeight="70.0" prefWidth="430.0" promptText="Enter amount..." style="-fx-font-size: 26;" />
      <ComboBox fx:id="currencyFromBox" editable="true" layoutX="56.0" layoutY="340.0" prefHeight="40.0" prefWidth="430.0" promptText="Select From Currency" />
      <ComboBox fx:id="currencyToBox" editable="true" layoutX="56.0" layoutY="420.0" prefHeight="40.0" prefWidth="430.0" promptText="Select Currency To Convert" />
      <Label fx:id="convertedAmount" alignment="CENTER" layoutX="62.0" layoutY="638.0" prefHeight="70.0" prefWidth="417.0" text="- - - - -">
         <font>
            <Font name="System Italic" size="48.0" />
         </font>
      </Label>
   </children>
